<div>
  <%= render 'errors' %>

  <h1>Edit movie</h1>

  <%= form_for [:admin, @movie] do |f| %>
    <div class='movie-container'>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.label :year %>
      <%= f.number_field :year %>

      <%= f.submit "Update Movie" %>
    </div>
  <% end %>

</div>
