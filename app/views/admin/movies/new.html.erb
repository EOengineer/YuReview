<div>
  <%= render 'errors' %>

  <%= form_for [:admin, @movie] do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.label :year %>
    <%= f.number_field :year %>

    <%= f.submit "Create Movie" %>

  <% end %>
</div>
