<div>
  <%= render 'errors' %>

  <h1>Add a new movie</h1>

  <%= form_for [:admin, @movie] do |f| %>
    <div class='movie-container'>
      <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>

      <div class="field">
        <%= f.label :description %>
        <%= f.text_area :description %>
      </div>

      <div class="field">
        <%= f.label :year %>
        <%= f.number_field :year %>
      </div>

      <div class="actions"><%= f.submit "Create Movie" %></div>
    </div>
  <% end %>

</div>
