<div class="auth">
  <%= render 'errors' %>

  <h1 class="text-center">Add a new movie</h1>

  <%= form_for [:admin, @movie] do |f| %>

      <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>

      <div class="field">
        <%= f.label :description %>
        <%= f.text_area :description %>
      </div>

      <div class="field">
        <%= f.label :year %>
        <%= f.number_field :year %>
      </div>

      <div class="actions text-center"><%= button_tag "Create Movie" %></div>

  <% end %>

</div>
