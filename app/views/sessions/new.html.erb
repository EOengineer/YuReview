<div class='auth'>
  <h1 class="text-center">Please Sign In!</h1>

  <%= form_tag sessions_path do %>
    <div class="field">
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email] %>
    </div>
    <div class="field">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <div class="actions text-center"><%= button_tag "Sign In" %></div>
  <% end %>
</div>
